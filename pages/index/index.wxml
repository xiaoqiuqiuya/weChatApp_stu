<view class="search_input">
	<navigator url="../search/search" open-type="navigate">搜索</navigator>
</view>

<!-- 轮播图开始 -->

<swiper autoplay circular indicator-dots>
	<swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
		<navigator>
			<image src="{{item.image_src}}" mode="widthFix"></image>
		</navigator>
	</swiper-item>
</swiper>
<!-- 轮播图结束 -->
<!-- 分类导航开始 -->
<view class="index_cate">
	<navigator wx:for="{{categoryList}}" wx:key="image_src">
		<image mode="widthFix" src="{{item.image_src}}" />
	</navigator>
</view>
<!-- 分类导航结束 -->


<!-- 楼层开始 -->
<view class="index_floor">
	<!-- 楼层标题 -->
	<view class="floor_group" wx:for="{{floorList}}" wx:key="image_src" wx:for-index="index" wx:for-item="item">
		<view class="floor_title">
			<image src="{{item.floor_title.image_src}}" mode="widthFix"> </image>
		</view>
		<!-- 楼层内部 -->
		<view class="floor_list">
			<navigator class="floor_list_navigator" wx:for="{{item.product_list}}" wx:for-item="item1" wx:key="navigator_url">
				<view class="floor_content">
				<image src="{{item1.image_src}}" mode="widthFix" />
				</view>
			</navigator>

		</view>
	</view>
</view>

<!-- 楼层结束 -->